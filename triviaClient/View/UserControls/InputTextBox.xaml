<UserControl x:Class="trivia_gui.View.UserControls.InputTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trivia_gui.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource RoundedTextBlockBorder}" Height="28"/>
        <TextBlock x:Name="tbPlaceholder" Style="{StaticResource BehindTextBlock}" Text="{Binding Placeholder}" Width="220"/>
        <TextBox Background="Transparent" Style="{StaticResource InputBox}" x:Name="txtInput" TextChanged="txtInput_TextChanged" Height="28"/>
    </Grid>
</UserControl>
