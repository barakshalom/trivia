<UserControl x:Class="trivia_gui.View.UserControls.PageBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trivia_gui.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <!-- Header . TODO: adding username at the top -->
        <Grid Grid.Row="0">
            <Rectangle Fill="#FFD1DF"/>
            <Image Source="../images/Logo.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="350*"/>
                <ColumnDefinition Width="120*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Border -->
            <Image Grid.Column="0" Source="C:\Users\Cyber_User\Desktop\gridLinedLeft.png" Stretch="Fill"/>
            
            <!-- Right Border -->
            <Image Grid.Column="2" Source="C:\Users\Cyber_User\Desktop\gridLinesRight.png" Stretch="Fill"/>
        </Grid>

        <!-- Footbar -->
        <Grid Grid.Row="2">
            <Rectangle Fill="#FFD1DF"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" FontFamily="Courier New">BY baraksh and omersa</TextBlock>
        </Grid>
    </Grid>
   
</UserControl>
